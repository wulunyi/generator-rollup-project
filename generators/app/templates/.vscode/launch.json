{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "args": [
                "-r",
                "tsconfig-paths/register",
                "${workspaceRoot}/index.debug.ts",
            ],
            "env": {
                "TS_NODE_FILES": true,
                "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.debug.json",
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}